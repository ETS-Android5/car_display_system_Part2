<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutHelp">
    <!--android:background="@drawable/background_image"-->

    <TextView
        android:id="@+id/AboutHelp_text"
        android:layout_width="471dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/coda"
        android:padding="2dp"
        android:text="About &amp; Help"
        android:textAllCaps="true"
        android:textColor="#AAE5FF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <ImageButton
        android:id="@+id/back_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.982"
        app:srcCompat="@drawable/back_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="868dp"
        android:layout_height="458dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="In order to enhance and improve the driving experience in BMW cars in general (and BMW’s Autonomous cars in particular), drivers and car testers must understand and feel not only the condition of the environment and the traffic conditions, but also the condition of the road, e.g. fraction of the road, humidity, temperature and angle.
\n\nOur system aims to receive the conditions of the road and data collected by the car’s sensors, and provide a comfortable and elegant Android application, to graphically display the Real-time data, collected by the sensors, on a screen display attached to the car’s dashboard.
\n\nDeveloped by\n
	    Daher Daher            [daher928@campus.technion.ac.il]\n
	    Vivian Lawin            [vivlawin@campus.technion.ac.il]\n
\nSupervisor\n
	    Boaz Mizrahi\n
\nTechnion - Institute of Technology\n
Department of Electrical Engineering | High Speed Digital Systems Lab (HSDSL)
"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutHelp_text"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>